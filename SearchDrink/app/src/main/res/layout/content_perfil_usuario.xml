<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/toolbar_user"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.alura.searchdrink.activity.PerfilUsuarioActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#000000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.DetalhesProvaFragment"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        android:background="#FFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem vindo(a)!"
            android:textSize="20sp"
            android:textStyle="italic"
            android:paddingTop="15dp"
            android:id="@+id/perfil_usuario_bemvindo"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <ImageView
            android:id="@+id/perfil_usuario_foto"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/person"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/perfil_usuario_button_sair"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#000"
            android:textColor="@color/color_app"
            android:text="Fazer logout"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_copovazio"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="VocÃª pode ser um estabelecimento clicando em Sou Bar!"
            android:fontFamily="casual"/>

        <Button
            android:id="@+id/perfil_usuario_button_sou_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:text="sou bar"
            android:textSize="20sp"
            android:textColor="@color/color_app"/>
    </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>